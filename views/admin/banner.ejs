  <div class="card">
    <h5 class="card-header">List of Banners</h5>
    <div class="table-responsive text-nowrap">
      <table class="table" id="dataTable">
        <thead>
          <tr>
            <th>Sl.No</th>
            <th>Title</th>
            <th>Image</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          <!-- Iterate over the banners array -->
          <% banners.forEach(function(banner, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= banner.title %></td>
              <td>
                      <img src="<%='/images/'+banner.image%>" style="width: 70px; height: 70px;" />
                   
                  </ul>
              </td>
              <td><%= banner.startDate %></td>
              <td><%= banner.endDate %></td>
              <td>
                <!-- Button to trigger the modal for editing a banner -->
                <a href="#" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editBannerModal<%= index %>">Edit</a>
                <!-- Button to trigger the modal for deleting a banner -->
                <a href="#" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteBannerModal<%= index %>">Delete</a>
                
              </td>
            </tr>
            <!-- Edit Banner Modal -->
            <!-- Add the modal markup for editing the banner using banner's index as part of the modal ID -->
            <div class="modal fade" id="editBannerModal<%= index %>" tabindex="-1" aria-labelledby="editBannerModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="editBannerModalLabel">Edit Banner</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <!-- Add input fields for editing the banner details here -->
                        <form action="/admin/editbanner/<%= banner._id %>" method="post" enctype="multipart/form-data">
                          <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="edit_title" value="<%= banner.title %>" name="title" required>
                          </div>
                          <div class="form-group">
                            <label for="startDate">Start Date</label>
                            <input type="date" class="form-control" id="edit_startDate" value="<%= banner.startDate %>" name="startDate" required>
                          </div>
                          
                          <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="edit_isExpired" value="<%= banner.isExpired %>" name="isExpired">
                            <label class="form-check-label" for="edit_isExpired">Is Expired</label>
                          </div>
                          <div class="form-group">
                            <input type="file" name="image"  accept="image/*">
                          </div>
                          
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
              <!-- Add the modal content here -->
            </div>
            <!-- Delete Banner Modal -->
            <!-- Add the modal markup for deleting the banner using banner's index as part of the modal ID -->
            <div class="modal fade" id="deleteBannerModal<%= index %>" tabindex="-1" aria-labelledby="deleteBannerModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="deleteBannerModalLabel<%= index %>">Delete Banner</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form action="/admin/banner/delete/<%= banner._id %>" method="get">
                        <!-- Add a message asking for confirmation -->
                        <p>Are you sure you want to delete this banner?</p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        
                        <button type="submit" class="btn btn-danger">Delete</button>
                    
                      </div>
                    </form>
                    </div>
                  </div>
              <!-- Add the modal content here -->
            </div>
          <% }) %>
          <!-- End of iteration -->
        </tbody>
      </table>
