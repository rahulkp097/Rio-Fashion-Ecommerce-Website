                            </td>
                            
                            <!-- Delete coupon Modal -->
                            <div class="modal fade" id="deleteCouponModal<%= index %>" tabindex="-1" role="dialog" aria-labelledby="deleteCouponModalLabel<%= index %>" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="deleteCouponModalLabel<%= index %>">Confirm Deletion</h5>
